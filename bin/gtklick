from gtklick.gtklick import GTKlick
import sys
import os.path

bin_dir = os.path.abspath(os.path.dirname(sys.argv[0]))
share_dir = os.path.join(os.path.split(bin_dir)[0], 'share/gtklick')

app = GTKlick(sys.argv[1:], share_dir)
app.run()
